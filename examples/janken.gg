role left, right { show: Hand }

data Hand := ROCK << PAPER << SCISSORS << ROCK

init left.show := ROCK
init right.show := ROCK

role(?p) -> play(?hand)
  :- ?hand in Hand
  ==> ?p.show = ?hand

terminal :- left.show =/= right.show

left $= 100, right $= 0 :- left.show >> right.show
left $= 0, right $= 100 :- left.show << right.show
